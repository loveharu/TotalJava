package tjoen;

import java.time.DayOfWeek;
import java.time.LocalDateTime;
import java.util.*;
import java.util.Scanner;

public class Day3 {

	public static void main(String[] args) {
		int[] diceRoll = { 0, 0, 0, 0, 0, 0 };
		Scanner sc = new Scanner(System.in);
		Random rand = new Random();
		System.out.println("주사위 굴릴 횟수 입력");
		int count = sc.nextInt();
		for (int i = 0; i < count; i++) {
			int diceStart = rand.nextInt(6) + 1;
			switch (diceStart) {
			case 1:
				diceRoll[0]++;
				break;
			case 2:
				diceRoll[1]++;
				break;
			case 3:
				diceRoll[2]++;
				break;
			case 4:
				diceRoll[3]++;
				break;
			case 5:
				diceRoll[4]++;
				break;
			case 6:
				diceRoll[5]++;
				break;

			}
		}
		int i = 1;
		for (int sum : diceRoll) {

			System.out.println(i + "번 주사위 눈 " + sum);
			i++;
		}

	}

}
