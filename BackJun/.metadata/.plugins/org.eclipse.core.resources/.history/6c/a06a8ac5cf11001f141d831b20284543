			System.out.println("몬스터 x" +x);
			int y = monster.getY();
			System.out.println("몬스터 y" +y);
			
			if (userPos.getX() == x && userPos.getY() == y) {
				System.out.println("일반 몬스터와 충돌!");
				result = 1;
			}
		}
		/*for (MonsterInfo monster : magic) {
