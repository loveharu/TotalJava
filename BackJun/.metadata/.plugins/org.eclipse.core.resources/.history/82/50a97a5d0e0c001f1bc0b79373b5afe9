package tjoen;

import java.time.DayOfWeek;
import java.time.LocalDateTime;
import java.util.*;

public class Day3 {

	public static void main(String[] args) {
		
	// 1. while 문
		int i = 0;
		int sum = 4;
		while(i>14) {
			sum += sum;
			i++;	
		}
		System.out.println("while문 : " + sum);
		for(int j=0; i<14; i++) {
		      sum += sum;	
			  System.out.println("for문 : " + sum);
		}
		i = 0;
		do {
			sum += sum;
            i++;
		}while(i>14);
	}

}
