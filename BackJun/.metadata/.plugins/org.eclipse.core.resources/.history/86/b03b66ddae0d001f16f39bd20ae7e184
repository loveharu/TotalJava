package tjoen;

import java.time.DayOfWeek;
import java.time.LocalDateTime;
import java.util.*;
import java.util.Scanner;

public class Day3 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		System.out.println("학생 수 입력");
		int count = sc.nextInt();
		boolean[] flag = new boolean[count];
		System.out.println("학생 수 입력");
		for (int i = 0; i < flag.length; i++) {
			System.out.println(i + "번 학생의 출결 입력(출석 or 결석 ");
			String input = sc.nextLine();
			if (input.equals("출석"))
				flag[i] = true;
			else if (input.equals("결석"))
				flag[i] = false;
			else
				System.out.println("잘못된 입력");
		}
		while (true) {
			System.out.println("원하는 메뉴 입력 1. 전체 출석사항 2. 결석자 추가 3. 출석자 추가 4. 종료");
			int menu = sc.nextInt();
			switch (menu) {
			case 1:
				for(boolean get : flag) {
					int index = 1;
					if(get)
                        System.out.println(index + "번 학생의 출석 사항은 출석입니다.");
                    else
                        System.out.println(index + "번 학생의 출석 사항은 결석입니다.");
				}
				break;
			case 2:
				System.out.println("결석한 학생의 번호를 입력하세요");
				flag[sc.nextInt()] = false;
				break;
			case 3:
				System.out.println("출석한 학생의 번호를 입력하세요");
				flag[sc.nextInt()] = true;
				break;
			default:
				System.exit(0);
			}
		}
	}

}
