package tjoen;

import java.time.DayOfWeek;
import java.time.LocalDateTime;
import java.util.*;
import java.util.Scanner;

public class Day3 {

	public static void main(String[] args) {
		int number1 = 0;
		int number2 = 0;
		int number3 = 0;
		int number4 = 0;
		int number5 = 0;
		int number6 = 0;
		Scanner sc = new Scanner(System.in);
		Random rand = new Random();
		System.out.println("주사위 굴릴 횟수 입력");
		int count = sc.nextInt();
		int[] dice = new int[count];
		for (int i = 0; i < count; i++) {
			int diceRoll = rand.nextInt(6) + 1;
			dice[i] = diceRoll;
		}
		for (int i = 0; i < dice.length; i++) {
			switch (dice[i]) {
			case 1:
				number1++;
				break;
			case 2:
				number2++;
				break;
			case 3:
				number3++;
				break;
			case 4:
				number4++;
				break;
			case 5:
				number5++;
				break;
			case 6:
				number6++;
				break;

			}
		}
		System.out.println("눈 1 횟수 :"+ number1 + "번");
		System.out.println("눈 2 횟수 :" + number2 + "번");
		System.out.println("눈 3 횟수 :" + number3 + "번");
		System.out.println("눈 4 횟수 :" + number4 + "번");
		System.out.println("눈 5 횟수 :" + number5 + "번");
		System.out.println("눈 6 횟수 :" + number6 + "번");
		
		

	}

}
